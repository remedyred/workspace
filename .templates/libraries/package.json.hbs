{
	"name": "@snickbit/{{name}}",
	"description": ">> TODO: Description",
	"version": "0.0.0",
	"license": "MIT",
	"exports": {
		"require": "./dist/index.js",
		"import": "./dist/index.mjs",
		"types": "./dist/index.d.ts"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "pnpm run bundle --dts --minify",
		"bundle": "tsup",
		"clean": "shx rm -rf ./dist ",
		"dev": "concurrently -c magenta,cyan pnpm:dev:*",
		"dev:build": "pnpm run bundle --sourcemap",
		"dev:types": "tsc --project ./tsconfig.types.json",
		"docs": "typedoc",
		"test": "jest",
		"test:ci": "jest --ci --onlyChanged",
		"watch": "concurrently -k -c magenta,cyan pnpm:watch:*",
		"watch:dev": "pnpm run dev --watch",
		"watch:types": "pnpm run dev:types --watch"
	},
	"release": {
		"extends": [
			"@snickbit/semantic-release"
		]
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node"
	},
	"devDependencies": {
		"@snickbit/eslint-config": "1.3.2",
		"concurrently": "7.3.0",
		"eslint": "8.23.0",
		"jest": "28.1.3",
		"shx": "0.3.4",
		"tsup": "6.2.3",
		"typedoc": "0.23.11",
		"typedoc-plugin-markdown": "3.13.4",
		"typescript": "4.7.4"
	},
	"engines": {
		"node": ">= 12"
	},
	"tsup": {
		"entry": [
			"src/index.ts"
		],
		"clean": true,
		"format": [
			"esm",
			"cjs"
		]
	}
}
